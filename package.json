{
  "name": "base64util",
  "version": "2.2.0",
  "description": "base64 encode/decode utility for browsers and node.js, with polyfill and URL friendly format, works with multi-byte and utf8 strings",
  "main": "dist/base64.js",
  "module": "src/base64.js",
  "esnext": "src/base64.js",
  "unpkg": "dist/base64.min.js",
  "reveal": true,
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "test": "mocha --reporter spec",
    "coverage": "npx nyc --reporter=lcov --reporter=text-summary npm run test",
    "jest": "npx jest",
    "jest:watch": "npx jest --watch",
    "jest:cov": "npx jest --coverage",
    "verup": "verup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duzun/base64util.git"
  },
  "keywords": [
    "base64",
    "encode",
    "decode",
    "utf8",
    "url"
  ],
  "author": "Dumitru Uzun <contact@duzun.me> (https://DUzun.Me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duzun/base64util/issues"
  },
  "homepage": "https://duzun.me/playground/encode#base64Encode=Test%20String%20",
  "verup": {
    "files": [
      "package-lock.json",
      "src/base64.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "chai": "^4.2.0",
    "mocha": "^6.2.3",
    "rollup": "^2.35.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "verup": "^1.7.1"
  },
  "extra": {
    "ex-devDependencies": {
      "gulp": "^4.0.2",
      "gulp-babel": "^8.0.0",
      "gulp-better-rollup": "^4.0.1",
      "gulp-load-plugins": "^2.0.6",
      "gulp-plugins": "0.0.18",
      "gulp-rename": "^2.0.0",
      "gulp-sourcemaps": "^2.6.5"
    }
  },
  "browserslist": "> 0.25%, not dead",
  "jshintConfig": {
    "esversion": 9,
    "laxbreak": true,
    "laxcomma": true,
    "undef": true,
    "unused": true,
    "sub": true,
    "expr": true,
    "bitwise": false,
    "eqeqeq": false,
    "boss": true,
    "eqnull": true,
    "scripturl": true,
    "-W041": false
  }
}
